<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_detail_graph"
    app:startDestination="@id/movie_detail">

    <fragment
        android:id="@+id/movie_detail"
        android:name="elieomatuku.cineast_android.presentation.details.movie.MovieFragment"
        android:label="Movie Detail">
        <action
            android:id="@+id/navigate_to_video"
            app:destination="@id/video" />
        <action
            android:id="@+id/navigate_to_gallery"
            app:destination="@id/gallery" />
        <action
            android:id="@+id/navigate_to_person_detail"
            app:destination="@id/person_detail_graph">
            <argument
                android:name="screen_name"
                app:argType="string" />
            <argument
                android:name="personId"
                app:argType="integer" />
        </action>
        <action
            android:id="@+id/navigate_to_movie_detail"
            app:destination="@id/movie_detail" />
        <action
            android:id="@+id/navigate_to_website"
            app:destination="@id/website" />
        <argument
            android:name="screen_name"
            app:argType="string" />
        <argument
            android:name="movieId"
            app:argType="integer"
            />
    </fragment>

    <fragment
        android:id="@+id/gallery"
        android:name="elieomatuku.cineast_android.presentation.details.gallery.GalleryFragment"
        android:label="Movie Gallery"
        tools:layout="@layout/fragment_gallery">
        <argument
            android:name="showAppBar"
            android:defaultValue="false" />
        <argument
            android:name="showBottomNav"
            android:defaultValue="false" />
        <argument
            android:name="posters"
            app:argType="string[]" />
    </fragment>

    <fragment
        android:id="@+id/video"
        android:name="elieomatuku.cineast_android.presentation.fragment.YoutubeFragment"
        android:label="Movie Gallery"
        tools:layout="@layout/widget_youtube">
        <argument
            android:name="showAppBar"
            android:defaultValue="false" />
        <argument
            android:name="showBottomNav"
            android:defaultValue="false" />
        <argument
            android:name="youtube_url"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/website"
        android:name="elieomatuku.cineast_android.presentation.fragment.WebViewFragment">
        <argument
            android:name="showAppBar"
            android:defaultValue="false" />
        <argument
            android:name="showBottomNav"
            android:defaultValue="false" />
        <argument
            android:name="url"
            app:argType="string" />
    </fragment>

    <include
        android:id="@+id/person_detail_graph"
        app:graph="@navigation/person_detail_graph" />

</navigation>